<form>
  <label>Cognito Audit</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="field1">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="user_token" searchWhenChanged="true">
      <label>User:</label>
      <default>*</default>
      <fieldForLabel>user</fieldForLabel>
      <fieldForValue>user</fieldForValue>
      <search>
        <query>`vectra_index` sourcetype="vectra:cognito:audit" | stats count by user</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
      <choice value="*">All</choice>
    </input>
    <input type="dropdown" token="result_token" searchWhenChanged="true">
      <label>Result:</label>
      <choice value="*">All</choice>
      <default>*</default>
      <fieldForLabel>result</fieldForLabel>
      <fieldForValue>result</fieldForValue>
      <search>
        <query>`vectra_index` sourcetype="vectra:cognito:audit" | stats count by result</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
    </input>
    <input type="text" token="search_filter_token">
      <label>Search FIlter:</label>
      <default>*</default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <search>
          <query>`vectra_index` sourcetype="vectra:cognito:audit" user="$user_token$" result="$result_token$" $search_filter_token$ | table _time, user, privilege ,result, message | rename user as "User", privilege as "Role", message as "Activity", result as "Result"</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="count">50</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">true</option>
        <option name="wrap">true</option>
        <format type="color" field="Result">
          <colorPalette type="map">{"success":#65A637,"failure":#D93F3C}</colorPalette>
        </format>
      </table>
    </panel>
  </row>
</form>